@using EntityLayer.Concrete
@model List<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kullanıcılar</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Kullanıcı
                            </th>
                            <th style="width: 30%">
                                Kullanıcı Resmi
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kullanıcı Rolü
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @Model)
                        {
                            //if (@item.UserRoles.ROLE_NAME == "Developer")
                            //{
                            //    color = "badge badge-danger";
                            //}
                            //if (@item.UserRoles.ROLE_NAME == "Analist")
                            //{
                            //    color = "badge badge-info";
                            //}
                            <tr>
                                <td>
                                    #
                                </td>
                                <td>
                                    <a>
                                        @item.USER_NAME @item.USER_SURNAME
                                    </a>
                                    <br />
                                    <small>
                                        @item.USER_MAIL
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.USER_IMAGE">
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    @*<span class="@color">@item.UserRoles.ROLE_NAME</span>*@
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/AdminUser/EditUser/@item.USER_CODE">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/AdminUser/DeleteUser/@item.USER_CODE">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/AdminUser/AddUser" class="btn btn-info">Yeni Kullanıcı</a>
    </section>
</body>
</html>